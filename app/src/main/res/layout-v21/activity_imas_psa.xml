            <TextView
                android:id="@+id/dopReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="52dp"
                android:layout_marginEnd="1dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/dopuni_registraciju"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/imasPsaTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="32dp"
                android:layout_marginTop="137dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/ima_li_psa"
                android:textColor="@color/white"
                android:textSize="25sp"
                tools:ignore="RelativeOverlap" />


            <RadioGroup
                android:id="@+id/radgroupDaNe"
                android:layout_width="361dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="32dp"
                android:layout_marginTop="197dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButtonDa"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dip"
                    android:background="@drawable/light_green_choose"
                    android:button="@null"
                    android:text="@string/da"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    tools:ignore="RtlSymmetry" />

                <RadioButton
                    android:id="@+id/radioButtonNe"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/light_green_choose"
                    android:button="@null"
                    android:text="@string/ne"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    tools:ignore="RtlSymmetry" />
            </RadioGroup>

            <TextView
                android:id="@+id/imepsaTxt"
                android:layout_width="wrap_content"
